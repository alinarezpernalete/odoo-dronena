<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Offer Tree</field>
        <field name="model">real_estate_property_offer</field>
        <field name="arch" type="xml">
            <tree string="Tree View" edit="False" editable="bottom" delete="False">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_action" string="Accept" type="object" icon="fa-check" invisible="status == '1' and (property_id.state == '3' or property_id.state == '4' or property_id.state == '5')"/>
                <button name="refuse_action" string="Refuse" type="object" icon="fa-solid fa-ban" invisible="status == '1' and (property_id.state == '3' or property_id.state == '4' or property_id.state == '5')"/>
                <field name="status"/>
                <control>
                    <create string="Add an offer"/>
                </control>
            </tree>
        </field>
    </record>

    <record id="real_estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property Offer Form</field>
        <field name="model">real_estate_property_offer</field>
        <field name="arch" type="xml">
            <form string="Form View">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <!-- <field name="status"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>